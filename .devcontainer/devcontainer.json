{
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "alexkrechik.cucumberautocomplete",
        "mechatroner.rainbow-csv",
        "grapecity.gc-excelviewer",
        "jimasp.behave-vsc",
